#############################
# Intel Compiler
#############################


F90 = mpifort

F90FLAGS = -cpp -w -O3 -ffixed-line-length-none


MPIDIR=/cm/shared/apps/openmpi/openmpi-4.0.1
MPILIB=$(MPIDIR)/lib
MPIINC=$(MPIDIR)/include

SRC = src
DST = build

LIBPATH = -L$(MPILIB) -lmpi
INCPATH = -I$(MPIINC)


OBJ= $(patsubst %,$(DST)/%, EvolvingYieldBoundary.o)
EvolvingYieldBoundary.f90
$(DST)/%.o: $(SRC)/%.f90 
		$(F90) $(F90FLAGS) $(INCPATH) -c $(filter-out $(SRC)/,$^) -o $(DST)/$*.o 

all: EvolvingYieldBoundary

Analytic: $(OBJ3)
		$(F90) $(F90FLAGS) -o $@ $^ $(LIBPATH)

RoughDiff: $(OBJ)
		$(F90) $(F90FLAGS) -o $@ $^ $(LIBPATH) 


EvolvingYield: $(OBJ2)
		$(F90) $(F90FLAGS) -o $@ $^ $(LIBPATH)

ConstYield: $(OBJ4)
	       $(F90) $(F90FLAGS) -o $@ $^ $(LIBPATH)

PurelyElastic: $(OBJ5)
	       $(F90) $(F90FLAGS) -o $@ $^ $(LIBPATH)
clean:
		rm -f ./Analytic ./RoughDiff ./EvolvingYield ./ConstYield ./PurelyElastic $(DST)/*.o $(DST)/*genmod.f90 $(DST)/*genmod.mod $(DST)/*.mod

test:
		echo $(UNAME)

